<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.system.mapper.user.UserMapper">

    <!-- 新增用户信息 -->
    <insert id="insert" parameterType="org.system.entity.User" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO `user` (`name`, `sex`, `id_card`, `birthday`, `phone`, `province`, `city`, `area`, `street`, `lng`, `lat`, `address`, `create_date`, `update_date`, `remark`)
        VALUES (#{name}, #{sex},#{idCard},#{birthday},#{phone},#{province},#{city},#{area},#{street},#{lng},#{lat},#{address},#{createDate},#{updateDate},#{remark} );
    </insert>

    <!-- 查询用户信息详情 -->
    <select id="selectOne" parameterType="org.system.entity.User" resultType="map">
        SELECT
            u.id,
            u.`name`,
            u.sex,
            u.id_card idCard,
            u.birthday,
            u.phone,
            u.province,
            u.city,
            u.area,
            u.street,
            u.lng,
            u.lat,
            u.address,
            u.create_date createDate,
            u.update_date updateDate,
            u.remark
        FROM
            `user` u
        WHERE u.id=#{id}

    </select>


</mapper>